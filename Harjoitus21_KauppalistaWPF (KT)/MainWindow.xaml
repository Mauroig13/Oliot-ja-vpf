<Window x:Class="Harjoitus21Kauppalista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kauppalista" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <CheckBox x:Name="checkBoxMaito" Content="Maito" Margin="0 0 0 10"/>
            <CheckBox x:Name="checkBoxLeipa" Content="Leipä" Margin="0 0 0 10"/>
            <CheckBox x:Name="checkBoxKahvi" Content="Kahvi" Margin="0 0 0 10"/>
            <CheckBox x:Name="checkBoxJuusto" Content="Juusto" Margin="0 0 0 10"/>
            <CheckBox x:Name="checkBoxHedelmat" Content="Hedelmät" Margin="0 0 0 10"/>
            <CheckBox x:Name="checkBoxVihannekset" Content="Vihannekset" Margin="0 0 0 10"/>
        </StackPanel>

        <Button Grid.Row="1" Content="Osta" Click="ButtonOsta_Click" HorizontalAlignment="Center" Margin="0 10"/>
    </Grid>
</Window>
